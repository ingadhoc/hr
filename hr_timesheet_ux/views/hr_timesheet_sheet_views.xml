<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.menu" id="hr_timesheet_sheet.menu_act_hr_timesheet_sheet_form">
        <field name="sequence" eval="5"/>
    </record>

    <record model="ir.actions.act_window" id="hr_timesheet_sheet.act_hr_timesheet_sheet_form">
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>

    <record model="ir.ui.view" id="hr_timesheet_sheet_form_view_inh">
        <field name="name">hr_timesheet.sheet.form</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_form"/>
        <field name="arch" type="xml">
            <div class="oe_title" position="before">
                <div class="oe_button_box" name="button_box">
                    <button type="action"
                        class="oe_stat_button" icon="fa-users"
                        name="%(hr_attendance.hr_attendance_action_employee)d">
                        <field name="attendance_count" widget="statinfo" string="Attendances"/>
                    </button>
                    <button type="action"
                        class="oe_stat_button" icon="fa-clock-o"
                        name="%(hr_timesheet_attendance.action_hr_timesheet_attendance_report)d"
                        context="{'search_default_user_id': employee_id}">
                        <span class="o_stat_text">Attendances vs Timesheet</span>
                    </button>
                </div>
            </div>
            <group name="dates">
                <field name="theoretical_hours" widget="float_time"/>
                <field name="theoretical_difference" widget="float_time"/>
            </group>
            <group name="dates" position="after">
                <group name="analysis">
                    <field name="total_attendance" widget="float_time"/>
                    <field name="total_timesheet" widget="float_time"/>
                    <field name="total_difference" widget="float_time"/>
                    <field name="description"/>
                </group>
            </group>
            <notebook position="after">
                <field name="note" placeholder="Notes..."/>
            </notebook>
            <field name="timesheet_ids" position="attributes">
                <attribute name="context">{'employee_id': employee_id, 'user_id':user_id, 'timesheet_date_start': date_start, 'timesheet_date_end': date_end, 'default_unit_amount': total_difference}</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_timesheet_sheet_tree_simplified">
        <field name="name">hr_timesheet.sheet.tree</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_tree_simplified"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="decoration-danger">theoretical_difference &lt; 0.0</attribute>
            </tree>
            <tree>
                <field name="description"/>
                <field name="total_timesheet" widget="float_time" sum="Total"/>
                <field name="theoretical_hours" widget="float_time" sum="Total"/>
                <field name="theoretical_difference" widget="float_time" sum="Total"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hr_timesheet_sheet_filter">
        <field name="name">hr_timesheet.sheet.filter</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id" ref="hr_timesheet_sheet.view_hr_timesheet_sheet_filter"/>
        <field name="arch" type="xml">
            <group>
                <filter string="Date" domain="[]" context="{'group_by':'date_from'}"/>
            </group>
        </field>
    </record>

</odoo>
